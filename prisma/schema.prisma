generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  user
  admin
  sales
}

model User {
  id                  String    @id @default(uuid(7)) @db.Uuid
  name                String
  email               String
  emailVerified       Boolean   @default(false)
  image               String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  phoneNumber         String?
  phoneNumberVerified Boolean?
  sessions            Session[]
  accounts            Account[]
  orders              Order[]

  role       UserRole  @default(user)
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  @@unique([email])
  @@unique([phoneNumber])
  @@map("user")
}

model Session {
  id        String   @id @default(uuid(7)) @db.Uuid
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(uuid(7)) @db.Uuid
  accountId             String
  providerId            String
  userId                String    @db.Uuid
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(uuid(7)) @db.Uuid
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Shop {
  id     String  @id @default(uuid(7)) @db.Uuid
  name   String  @unique
  orders Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("shop")
}

model ProductCategory {
  id       String    @id @default(uuid(7)) @db.Uuid
  name     String
  products Product[]

  @@unique([name])
  @@map("product_category")
}

model Product {
  id            String           @id @default(uuid(7)) @db.Uuid
  name          String
  slug          String
  price         Int              @default(0)
  stock         Int              @default(0)         // Actual available stock
  reservedStock Int              @default(0)         // Stock reserved for pending orders
  categoryId    String?          @db.Uuid
  category      ProductCategory? @relation(references: [id], fields: [categoryId], onUpdate: Cascade, onDelete: SetNull)
  orderItems    OrderItem[]
  stockEntries  StockEntry[]     // NEW: Relation to stock entries
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@unique([slug])
  @@index([categoryId])
  @@index([name])  // Index for name search
  @@index([slug])  // Index for slug lookups
  @@map("product")
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
}

model Order {
  id          String      @id @default(uuid(7)) @db.Uuid
  shopId      String      @db.Uuid
  shop        Shop        @relation(fields: [shopId], references: [id], onDelete: Restrict)
  status      OrderStatus @default(PENDING)
  totalAmount Int
  createdBy   String?     @db.Uuid
  creator     User?       @relation(fields: [createdBy], references: [id], onDelete: SetNull)
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([shopId])
  @@index([status])
  @@index([createdBy])
  @@index([status, shopId])  // Composite for status + shop queries
  @@index([createdBy, status])  // Composite for sales + status queries
  @@index([shopId, status])  // Composite for shop + status queries
  @@map("order")
}

model OrderItem {
  id          String   @id @default(uuid(7)) @db.Uuid
  orderId     String   @db.Uuid
  productId   String   @db.Uuid
  quantity    Int
  price       Int      // Selling price per unit
  description String?

  // Cost tracking
  totalCost     Int?   // Sum of all (unitCost × quantity) from allocations
  totalMargin   Int?   // Sum of all marginAmount from allocations
  avgMarginRate Float? // Average margin rate from allocations

  order               Order                   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product             Product                 @relation(fields: [productId], references: [id], onDelete: Restrict)
  stockEntryAllocations OrderItemStockEntry[] // NEW: Which stock entries were used

  @@index([orderId])
  @@index([productId])
  @@map("order_item")
}

// NEW: Supplier model
model Supplier {
  id        String      @id @default(uuid(7)) @db.Uuid
  name      String      @unique
  email     String?
  phone     String?
  address   String?
  stockEntries StockEntry[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("supplier")
}

// NEW: StockEntry model - track purchases from suppliers
model StockEntry {
  id           String   @id @default(uuid(7)) @db.Uuid
  productId    String   @db.Uuid
  supplierId   String   @db.Uuid
  quantity     Int      // Quantity purchased
  unitCost     Int      // Cost per unit
  totalCost    Int      // quantity × unitCost
  remainingQty Int      // How much left in stock
  purchaseDate DateTime @default(now())
  notes        String?

  product     Product                  @relation(fields: [productId], references: [id], onDelete: Restrict)
  supplier    Supplier                 @relation(fields: [supplierId], references: [id], onDelete: Restrict)
  allocations OrderItemStockEntry[]    // Which order items used this stock

  @@index([productId])
  @@index([remainingQty])  // For finding available stock
  @@map("stock_entry")
}

// NEW: OrderItemStockEntry - track which stock entries were used for each order item
model OrderItemStockEntry {
  id           String   @id @default(uuid(7)) @db.Uuid
  orderItemId  String   @db.Uuid
  stockEntryId String   @db.Uuid
  quantity     Int      // How many units from this stock entry
  unitCost     Int      // Cost per unit (copied for historical accuracy)
  unitPrice    Int      // Selling price per unit (copied from OrderItem)

  // Margin tracking per allocation
  marginAmount Int      // (unitPrice - unitCost) × quantity
  marginRate   Float    // ((unitPrice - unitCost) / unitPrice) × 100

  orderItem   OrderItem   @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  stockEntry  StockEntry  @relation(fields: [stockEntryId], references: [id], onDelete: Restrict)

  @@index([orderItemId])
  @@index([stockEntryId])
  @@map("order_item_stock_entry")
}
